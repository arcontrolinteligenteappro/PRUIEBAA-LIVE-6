<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
    =================================================================
    ANDROID 12+ NATIVE SPLASH SCREEN THEME (PRODUCTION-GRADE)
    - Apply this theme to your starting Activity in AndroidManifest.xml
    - This provides a fast, system-level splash before the Compose UI loads.

    AndroidManifest.xml entry:
    <activity
        android:name=".MainActivity"
        android:exported="true"
        android:theme="@style/Theme.App.Starting" <!-- APPLY THEME HERE -->
        ...
    >
        ...
    </activity>
    =================================================================
    -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- REQUIRED: Set the splash screen's background color -->
        <item name="windowSplashScreenBackground">#0A0A0B</item>

        <!-- REQUIRED: Set the animated icon. Must be an AnimatedVectorDrawable. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/avd_splash_logo</item>
        
        <!-- Optional: A background color for the icon. Useful for transparent icons. -->
        <item name="windowSplashScreenIconBackgroundColor">#0A0A0B</item>

        <!-- REQUIRED: Set the theme of the Activity that follows your splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.AppCompat.DayNight.NoActionBar</item>
    </style>

    <!--
    =================================================================
    REQUIRED DRAWABLES FOR SPLASH SCREEN
    - Place the following two files in your `res/drawable/` directory.
    - These are mandatory for the native splash to function correctly.
    =================================================================
    -->

    <!--
    FILE: res/drawable/ic_ar_logo.xml
    (The base vector graphic for the AR monogram. This is the final state of the animation.)
